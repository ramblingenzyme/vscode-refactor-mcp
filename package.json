{
    "name": "vscode-mcp-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "test": "npm run test --workspaces --if-present",
        "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/*/out"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "@typescript-eslint/parser": "^7.11.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5"
    },
    "packageManager": "yarn@4.12.0"
}
