{
  "name": "vscode-mcp-proxy",
  "displayName": "VSCode MCP Proxy",
  "description": "VSCode extension with IPC server for MCP proxying",
  "version": "0.0.1",
  "repository": "https://github.com/ramblingenzyme/vscode-refactor-mcp",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "VSCode MCP Proxy",
      "properties": {
        "vscode-mcp-proxy.enableHttpServer": {
          "type": "boolean",
          "default": false,
          "description": "Enable the HTTP MCP server for external clients (e.g., VSCodium, fastmcp). When enabled, tools will be accessible via HTTP on the configured port."
        },
        "vscode-mcp-proxy.httpPort": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 65535,
          "description": "Port for the HTTP MCP server. Use 0 for a random available port, or specify a port number between 1-65535."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "build": "rollup -c rollup.config.mjs",
    "compile": "yarn run build",
    "clean": "rm -rf out dist *.vsix",
    "watch": "rollup -c rollup.config.mjs -w",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./dist/test/runTest.js",
    "package": "vsce package --skip-license"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/express": "^5.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "rollup": "^4.53.3",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@vscode-mcp/shared": "*",
    "zod": "^4.1.13"
  }
}
